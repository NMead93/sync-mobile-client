<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:SyncMobileClient"
             x:Class="SyncMobileClient.MainPage">
    <Button Text="Add Customer"/>
    <StackLayout>
        <ListView x:Name="PreferenceList"
                  ItemSelected="OnItemSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding PreferenceName}"
                              Detail="{Binding PreferenceValue}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Label Text="Preference Name"/>
        <Entry x:Name="NameEntry" Text="{Binding PreferenceName}"/>
        <Label Text="Preference Value"/>
        <Entry x:Name="ValueEntry" Text="{Binding PreferenceValue}"/>
        <Button Text="Add Preference" Command="{Binding AddPreferenceCommand}" />
        <Button Text="NUKE EVERYTHING" Command="{Binding NukeEverythingCommand}" />
    </StackLayout>

</ContentPage>