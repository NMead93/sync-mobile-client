<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SyncMobileClient.Details">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="{Binding CurrentPreferenceName}" />
            <Label Text="Update Value" />
            <Entry Text="{Binding NewValue}" />
            <Button Command="{Binding UpdateValueCommand}" Text="Update" />
            <Button Command="{Binding DeleteValueCommand}" Text="Delete" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>